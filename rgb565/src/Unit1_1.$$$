{ KOL MCK } // Do not remove this line!

procedure NewForm1( var Result: PForm1; AParent: PControl );
begin

  {$IFDEF KOLCLASSES}
  Result := PForm1.Create;
  {$ELSE OBJECTS}
  New( Result, Create );
  {$ENDIF KOL CLASSES/OBJECTS}
  Result.Form := NewForm( AParent, 'PlayRGB -> PlayOn!HD conversion tool' ).SetPosition( 443, 102 );
  Applet :=  Result.Form;
  Result.Form.Add2AutoFree( Result );
{$IFDEF UNICODE_CTRLS}
     Result.Form.SetUnicode(TRUE);
{$ENDIF UNICODE_CTRLS}
   {$IFDEF USE_NAMES}
    Result.Form.SetName( Applet, 'Form1' );
   {$ENDIF}
    Result.Form.Style := Result.Form.Style and not WS_MAXIMIZEBOX;
    Result.Form.SetClientSize( 346, 110 );

    Result.OpenDialog := NewOpenSaveDialog( 'Select file for RGB565 conversion', '', [  ] );
      Result.OpenDialog.Filter := 'Bitmap|*.bmp';
      Result.OpenDialog.DefExtension := 'bmp';
   {$IFDEF USE_NAMES}
    Result.OpenDialog.SetName( Result.Form, 'OpenDialog' ); 
   {$ENDIF}
  Result.Form.Add2AutoFree( Result.OpenDialog );
    // Result.Label1.TabOrder = -1
    Result.Label1 := NewLabel( Result.Form, 'by Mikka' ).SetPosition( 272, 80 ).SetSize( 65, 17 );
   {$IFDEF USE_NAMES}
    Result.Label1.SetName( Result.Form, 'Label1' ); 
   {$ENDIF}
   {$IFDEF UNICODE_CTRLS}
   Result.Label1.SetUnicode(TRUE);
   {$ENDIF UNICODE_CTRLS}
    // Result.ButtonOpen.TabOrder = 0
    Result.ButtonOpen := NewButton( Result.Form, 'Open' ).SetPosition( 16, 56 ).SetSize( 233, 41 );
   {$IFDEF USE_NAMES}
    Result.ButtonOpen.SetName( Result.Form, 'ButtonOpen' ); 
   {$ENDIF}
   {$IFDEF UNICODE_CTRLS}
   Result.ButtonOpen.SetUnicode(TRUE);
   {$ENDIF UNICODE_CTRLS}
    // Result.editFile.TabOrder = 1
    Result.editFile := NewEditBox( Result.Form, [  ] ).SetPosition( 16, 16 ).SetSize( 313, 25 );
   {$IFDEF USE_NAMES}
    Result.editFile.SetName( Result.Form, 'editFile' ); 
   {$ENDIF}
    {$IFNDEF UNICODE_CTRLS}Result.editFile.SetUnicode( TRUE );{$ENDIF}
      Result.OpenDialog.WndOwner := Result.Form.GetWindowHandle;
      Result.editFile.OnDropFiles := Result.editFileDropFiles;
      Result.ButtonOpen.OnClick := Result.ButtonOpenClick;
    Result.Form.CenterOnParent.CanResize := False;
    Result.Form.Perform( WM_INITMENU, 0, 0 );

end;

